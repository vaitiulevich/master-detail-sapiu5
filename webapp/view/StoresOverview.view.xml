<mvc:View
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="kate.vaitsiulevich.controller.StoresOverview"
	>
			<Page id="storesOverview" title="{i18n>HeaderTextListStores}">
				<VBox >
					<SearchField width="90%" class="sapUiSmallMargin" search="onSearchStore" />
					<List id="listStores" 
					items="{/Stores}" 
					mode="SingleSelectMaster" 
					selectionChange="onSelectionChange" 
					noDataText="{i18n>noDataText}">
						<ObjectListItem
						title="{Title}"
						type="Active"
						press="onSelectionChange"
						number="{
							path: 'EventDate',
							type: 'sap.ui.model.type.DateTime',
							formatOptions: {
								style: 'medium'
							}
						}"
						numberUnit="{i18n>numberUnit}">
							<ObjectAttribute text="{Description}" />
						</ObjectListItem>
					</List>
				</VBox>
			</Page>
</mvc:View>

