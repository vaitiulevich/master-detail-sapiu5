<mvc:View
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="kate.vaitsiulevich.controller.StoresOverview"
	>
	<App>
		<pages>
			<Page id="storesOverview" title="{i18n>HeaderTextListStores}">
				<VBox >
					<Button text="{i18n>BtnTextFilterListStores}" press="onPressFilterStoreBtn"/>
					<List id="list" items="{/Stores}"  mode="SingleSelectMaster" selectionChange="onSelectionChange" noDataText="{i18n>noDataText}">
						<ObjectListItem
						title="{Title}"
						type="Active"
						press="onSelectionChange"
						number="{
							path: 'EventDate',
							type: 'sap.ui.model.type.DateTime',
							formatOptions: {
								style: 'medium'
							}
						}"
						numberUnit="{i18n>numberUnit}">
							<ObjectAttribute text="{Description}" />
						</ObjectListItem>
					</List>
				</VBox>
			</Page>
		</pages>
	</App>
</mvc:View>

